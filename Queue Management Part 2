#include <iostream>
using namespace std; 

class Queue { 
	int size; 
	int* queue; 
	
	public:
	Queue() {
		size = 0;
		queue = new int[100];
	}
	void remove() { 
		if (size == 0) { 
			cout << "Queue is empty"<<endl; 
			return; 
		} 
		else { 
			for (int i = 0; i < size - 1; i++) { 
				queue[i] = queue[i + 1]; 
			} 
			size--; 
		} 
	} 
	void print() { 
		if (size == 0) { 
			cout << "Queue is empty"<<endl; 
			return; 
		} 
		for (int i = 0; i < size; i++) { 
			cout<<queue[i]<<" <- ";
		} 
		cout <<endl;
	}
	void add(int x) {
		queue[size] = x;
		size++;
	}
	Queue operator+(Queue &q){
		Queue q3;
		int i;
		for(i=0; i<this->size; i++){
			q3.queue[i] = this->queue[i];
		}
		q3.size = i;
		for(i=0; i<q.size; i++){
			q3.queue[q3.size] = q.queue[i];
			q3.size++;
		}
		return q3;
	}
}; 

int main() { 
	Queue q1; 
	q1.add(42); q1.add(2); q1.add(8);  q1.add(1);
	Queue q2;
	q2.add(3); q2.add(66); q2.add(128);  q2.add(5);
	Queue q3 = q1+q2;
	q3.print(); 

	return 0; 
}
